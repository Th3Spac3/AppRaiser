<div class="form__select">
  <%= form_tag("/display_theme", remote: true, :format => "js", authenticity_token: true) do %>
    <%= select_tag :theme,
               options_for_select(@themes, selected: @select_theme),
               prompt: 'select_theme', onchange: "$(this).parent('form').submit();",
               formats: [:js]%>
    <% end %>
</div>